PortSystem          1.0
PortGroup           github 1.0

github.setup        qalculate libqalculate 2.1.0 v

categories          math
platforms           darwin
maintainers         gmail.com:jjstickel
license             GPL-2+

description \
                    libqalculate is math libary for expression evaluation \
                    with units, variables and functions support and CAS \
                    functionality.

long_description \
                    libqalculate is math libary for expression evaluation \
                    with units, variables and functions support and CAS \
                    functionality.  This library directly supports the \
                    GUI interface qalculate-gtk or qalculate-kde.

github.tarball_from releases

checksums           rmd160  8ab2f87f5b2bed688ccd124e5bcbfe643c408d55 \
                    sha256  7668ed9ab32d46d3638297985a03bc995b6aedf8b8335685e1a43393ba236f12

# autoreconf to reconfigure for intltool; use package's autogen script to avoid
# conflict with gettext
use_autoreconf      yes
autoreconf.cmd      ./autogen.sh
autoreconf.env      NOCONFIGURE=1

depends_build-append \
                    port:intltool \
                    port:autoconf \
                    port:automake \
                    port:libtool \
                    port:pkgconfig \
                    port:doxygen

depends_lib-append \
                    port:gmp \
                    port:mpfr \
                    port:libxml2 \
                    port:curl \
                    port:icu \
                    port:gettext \
                    port:readline \
                    port:libiconv

patch {
    reinplace "s|libtoolize|glibtoolize|g" ${worksrcpath}/autogen.sh
}

notes-append "Graphical plotting is enabled by installing gnuplot.\n"
