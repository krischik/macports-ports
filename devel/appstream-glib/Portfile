PortSystem          1.0
PortGroup           compiler_blacklist_versions 1.0
PortGroup           meson 1.0
PortGroup           github 1.0
PortGroup           muniversal 1.0

github.setup        hughsie appstream-glib 0_7_11 appstream_glib_
version             [string map {_ .} ${version}]
license             LGPL-2+
categories          devel
maintainers         {devans @dbevans} openmaintainer
platforms           darwin
homepage            https://people.freedesktop.org/~hughsient/appdata/

description         This library provides objects and helper methods to help \
                    reading and writing AppStream metadata.

long_description    ${description}

checksums           rmd160  a8d3f7eddde0f17de1190a20ea5e04718ed22c9d \
                    sha256  cf2f9d791ba490a502bd76a8e3341f74b2882000e0b3e6eeaae454d17a600db1 \
                    size    2401215

depends_build-append  \
                    port:pkgconfig \
                    port:gperf

depends_lib-append \
                    path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:libarchive \
                    port:libsoup \
                    port:libstemmer \
